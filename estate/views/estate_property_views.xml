<?xml version="1.0"?>

<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Propietats Immobiliàries</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Etiquetes</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Tipus</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Propietat Immo">
                <field name="name" />
                <field name="type_ids"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="salesperson_id"/> 
                <field name="buyer_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Propietat Immobiliària">
                <sheet>
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group col="2">
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                            <group col="2">
                                <field name="expected_price"/>
                                <field name="best_offer" />
                            </group>
                            <group col="2">
                                <field name="state" />
                                <field name="type_ids" />
                            </group>
                            <group>
                            <field name="tag_ids" widget='many2many_tags' />
                            </group>
                        </group>                     
                        <notebook>
                            <page string="Descripció">
                                <group>
                                    <group col="2">
                                        <field name="description" />
                                        <field name="bedrooms" />
                                    </group>
                                    <group col="2">
                                        <field name="lift" />
                                        <field name="parking" />
                                    </group>
                                    <group col="2">
                                        <field name="bathrooms" />
                                        <field name="renewed" />
                                    </group>
                                    <group col="2">
                                        <field name="surface" />
                                        <field name="year_build" />
                                    </group>
                                    <group col="2">
                                        <field name="energy_certificate" />
                                    </group>
                                </group>
                            </page>
                            <page string="Ofertes">

                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_filter" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name" />
                <field name="type_ids"/>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="state"/>
                <field name="date_availability" />
                <field name="selling_price" />
                <filter string="Disponible" name="Disponibles" domain="[('state','in',['Nova','Oferta Rebuda'])]" help="Propietats noves o amb ofertes" />
                <filter string="Baix Preu" name="Preu Baix" domain="[('selling_price', '&lt;', 100000)]" help="Propietats amb preu de venda inferior a 100.000 €" />
                <group expand="0" string="Group By">
                    <filter string="Tipus" name="Tipus"
                    context="{'group_by':'type_ids'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>